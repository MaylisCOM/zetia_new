{% extends 'base.html.twig' %}


{% block body %}
<section class="contact-section">
    <div class="container">
        <div class="contact-left">
            <h1 class="hero-title">Espace Membre priv√©</h1>
            <h2 class="">Modification Mot de Passe</h2>
            {{ form_start(modifyPwdForm, {'attr': {'class': 'form'}}) }}
            
            <div class="form-group">
                {{ form_label(modifyPwdForm.actualPassword) }}
                <div class="input-group">
                    {{ form_widget(modifyPwdForm.actualPassword, {'attr': {'class': 'form-control' }}) }}
                </div>
                {{ form_errors(modifyPwdForm.actualPassword) }}
            </div>
            <div class="form-group">
                {{ form_label(modifyPwdForm.plainPassword.first) }}
                <div class="input-group">
                    {{ form_widget(modifyPwdForm.plainPassword.first, {'attr': {'class': 'form-control' }}) }}
                    <span class="input-group-text" id="togglePassword">
                        <i class="fa fa-eye"></i>
                    </span>
                </div>
                {{ form_errors(modifyPwdForm.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_label(modifyPwdForm.plainPassword.second) }}
                {{ form_widget(modifyPwdForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_end(modifyPwdForm) }}
    </div>
</div>
</section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #togglePassword {
            cursor: pointer;
            user-select: none;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.querySelector('#togglePassword');
            const password = document.querySelector('#password_user_plainPassword_first');

            togglePassword.addEventListener('click', function (e) {
                // Toggle the type attribute
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                // Toggle the eye icon
                this.querySelector('i').classList.toggle('fa-eye');
                this.querySelector('i').classList.toggle('fa-eye-slash');
            });
        });
    </script>
{% endblock %}