{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="contact-section">
    <div class="container">
        <div class="contact-left">
            <h1 class="hero-title">Connexion</h1>

                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="form">
                <div class="form-group">
                    <label for="username">Email :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="_password" required>
                </div>

                <button type="submit" class="btn btn-primary">Connexion</button>

                
            </form>
        </div>
        <div class="contact-right">
            <h1 class="hero-title">Inscription</h1>
            <p>Vous n'avez pas de compte ?</p>
            <a href="{{ path('app_register') }}" class="btn btn-secondary">Inscription</a>
        </div>    
    </div>
</section>
{% endblock %}
